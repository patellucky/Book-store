<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book Store</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Book Store</h1>
    
    <a href="/add" class="btn btn-danger mb-3">Add New Book</a>

    <table class="table table-striped table-bordered text-center">
      <thead class="table-dark">
        <tr>
          <th>Title</th>
          <th>Price</th>
          <th>Author</th>
          <th>City</th>
          <th>Pages</th>
          <th>Language</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% books.forEach(book => { %>
          <tr>
            <td><%= book.title %></td>
            <td>$<%= book.price %></td>
            <td><%= book.author %></td>
            <td><%= book.city %></td>
            <td><%= book.pages %></td>
            <td><%= book.language %></td>
            <td>
              <a href="/view/<%= book._id %>" class="btn btn-info btn-sm">View</a>
              <a href="/edit/<%= book._id %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/delete/<%= book._id %>" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>